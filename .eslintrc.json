{
  "root": true,
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "plugins": ["node"],
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "eqeqeq": ["error", "always"],
    "array-bracket-newline": ["error", "consistent"],
    "array-bracket-spacing": ["error", "never"],
    "block-spacing": ["error"],
    "brace-style": ["error"],
    "camelcase": ["error", {"properties": "never"}],
    "comma-dangle": ["error", "never"],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "computed-property-spacing": ["error", "never"],
    "capitalized-comments": ["error", "always", { "ignoreConsecutiveComments": true, "ignoreInlineComments": true }],
    "consistent-this": ["error", "that"],
    "func-call-spacing": ["error", "never"],
    "eol-last": ["error", "always"],
    "func-names": ["error", "as-needed"],
    "func-style": ["error", "expression"],
    "function-paren-newline": ["error", "consistent"],
    "key-spacing": ["error"],
    "keyword-spacing": ["error"],
    "linebreak-style": ["error", "unix"],
    "lines-around-comment": ["error"],
    "lines-between-class-members": ["error", "always"],
    "no-trailing-spaces": ["error"],
    "no-lonely-if": ["error"],
    "no-multiple-empty-lines": ["error"],
    "one-var": ["error", { "initialized": "never" }],
    "curly": ["error"],
    "strict": ["error"],
    "no-eval": ["error"],
    "no-var": ["error"],
    "guard-for-in": ["error"],
    "new-cap": ["error", { "newIsCap": true, "capIsNew": true, "properties": false  }],
    "no-new": ["error"],
    "no-empty": ["error"],
    "no-undef-init": ["error"],
    "no-loop-func": ["error"],
    "no-new-func": ["error"],
    "no-implied-eval": ["error"],
    "no-use-before-define": ["error"],
    "no-empty-function": ["error"],
    "no-else-return": ["error"],
    "no-useless-return": ["error"],
    "no-useless-computed-key": ["error"],
    "no-useless-constructor": ["error"],
    "no-useless-rename": ["error"],
    "wrap-iife": ["error", "inside"],
    "yoda": ["error"],
    "max-nested-callbacks": ["error", 3],
    "max-params": ["error", 5],
    "max-depth": ["error", 5],
    "max-len": ["error", 120, { "ignoreTrailingComments": true, "ignoreTemplateLiterals": true, "ignoreRegExpLiterals": true}],
    "prefer-const": ["error"],
    "prefer-arrow-callback": ["error", {"allowNamedFunctions": true}],
    "prefer-template": ["error"],
    "prefer-rest-params": ["error"],
    "prefer-destructuring": ["error", {
      "array": true,
      "object": true
    }],
    "prefer-arrow-callback": ["error"],
    "prefer-spread": ["error"],
    "spaced-comment": ["error", "always"],
    "space-unary-ops": ["error"],
    "space-infix-ops": ["error"],
    "arrow-body-style": ["error", "always"],
    "arrow-parens": ["error", "always"],
    "arrow-spacing": ["error"],
    "generator-star-spacing": ["error"],
    "no-confusing-arrow": ["error"],
    "no-unused-expressions": ["error"],
    "no-useless-constructor": ["error"],
    "no-useless-rename": ["error"],
    "no-whitespace-before-property": ["error"],
    "object-shorthand": ["error", "consistent-as-needed"],
    "rest-spread-spacing": ["error", "never"],
    "template-curly-spacing": ["error", "never"],
    "handle-callback-err": ["error"],
    "no-mixed-requires": ["error"],
    "no-new-require": ["error"],
    "no-path-concat": ["error"],
    "no-sync": ["warn"],
    "callback-return": ["warn"],
    "space-before-function-paren": ["error", "never"],
    "space-before-blocks": ["error", "always"],
    "array-bracket-spacing": ["error", "always"],
    "space-in-parens": ["error", "never"],
    "space-infix-ops": ["error", {"int32Hint": false}],
    "object-curly-spacing": ["error", "always"],
    "require-jsdoc": ["error", {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true,
        "ArrowFunctionExpression": true,
        "FunctionExpression": true
      }
    }],
    "valid-jsdoc": ["error", {
      "requireReturn": false,
      "requireReturnType": true,
      "requireReturnDescription": false,
      "matchDescription": ".+",
      "requireParamDescription": true,
      "prefer": {
        "arg": "param", "argument": "param", "params": "param", "class": "constructor", "return": "returns", "virtual": "abstract"
      },
      "preferType": {
        "Boolean": "boolean", "Number": "number", "Object": "object", "String": "string", "promise": "Promise"
      }
    }],
    "node/exports-style": ["error", "module.exports"],
    "node/no-unsupported-features": ["error", {"version": 8}]
  },
  "overrides": [
    {
      "files": ["src/**/*.spec.js", "test/**/*.js"],
      "env": {
        "es6": true,
        "node": true,
        "mocha": true
      },
      "settings": {
        "node": {
          "allowModules": ["chai", "chai-as-promised"]
        }
      },
      "globals": {
        "expect": true,
        "assert": true
      },
      "rules": {
        "max-nested-callbacks": ["error", 5],
        "no-console": ["warn"]
      }
    }
  ]
}
